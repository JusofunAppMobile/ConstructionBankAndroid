<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <LinearLayout
            android:id="@+id/vTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_item_bg"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_home_tag_add" />

                    <TextView
                        android:id="@+id/company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:textColor="#333"
                        android:textSize="16sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/company_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#666"
                        android:textSize="14sp"
                      />

                    <TextView
                        android:id="@+id/company_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#666"
                        android:textSize="14sp"
                        />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_tag_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="14dip"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/hot_company_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_company_tag"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/search_info_color"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_company_tag"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:textColor="@color/search_info_color"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/count_moneny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_company_tag"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:textColor="@color/search_info_color"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/company_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_company_tag"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_legal"
                style="@style/C_110"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    style="@style/C_111"
                    android:text="法定代表人：" />

                <TextView
                    android:id="@+id/tvLegal"
                    style="@style/C_113"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_time"
                style="@style/C_110"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    style="@style/C_111"
                    android:text="成立时间：" />

                <TextView style="@style/C_Empty" />

                <TextView
                    android:id="@+id/tvEstablish"
                    style="@style/C_113" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_state"
                style="@style/C_110"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone">

                <TextView
                    style="@style/C_111"
                    android:text="跟进状态：" />

                <TextView style="@style/C_Empty" />

                <TextView
                    android:id="@+id/text_follow_state"
                    style="@style/C_119"
                    android:text="未跟进"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_classfy"
                style="@style/C_110"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/text_classfy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_company_tag"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/search_info_color"
                    android:textSize="12dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#11999999"
                android:layout_marginLeft="5.5dp"
                android:layout_marginRight="5.5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/text_company_tag"
                    style="@style/C_tag"
                    android:text="标记为目标客户" />

                <TextView
                    android:id="@+id/text_company_push"
                    style="@style/C_tag"
                    android:layout_marginLeft="10dp"
                    android:text="信息推送" />

                <TextView
                    android:id="@+id/text_follow"
                    style="@style/C_tag"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/search_info_color"
                    android:text="跟进记录" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>