<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_common_list"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="取消"
            android:textColor="#666"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="选择时间"
            android:textColor="#333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_common_list"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="完成"
            android:textColor="#666"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.weigan.loopview.LoopView
            android:id="@+id/loop1"
            android:layout_width="@dimen/time_width"
            android:layout_height="@dimen/time_height"
            app:awv_centerTextColor="0xff333333"
            app:awv_isLoop="true"
            app:awv_outerTextColor="0xff999999"
            app:awv_textsize="15" />

        <TextView
            style="@style/C_Time_Label"
            android:text="年" />

        <com.weigan.loopview.LoopView
            android:id="@+id/loop2"
            android:layout_width="40dp"
            android:layout_height="@dimen/time_height"
            app:awv_centerTextColor="0xff333333"
            app:awv_isLoop="true"
            app:awv_outerTextColor="0xff999999"
            app:awv_textsize="15" />

        <TextView
            style="@style/C_Time_Label"
            android:text="月" />

        <com.weigan.loopview.LoopView
            android:id="@+id/loop3"
            android:layout_width="40dp"
            android:layout_height="@dimen/time_height"
            app:awv_centerTextColor="0xff333333"
            app:awv_isLoop="true"
            app:awv_outerTextColor="0xff999999"
            app:awv_textsize="15" />

        <TextView
            style="@style/C_Time_Label"
            android:text="日" />

        <com.weigan.loopview.LoopView
            android:id="@+id/loop4"
            android:layout_width="40dp"
            android:layout_height="@dimen/time_height"
            app:awv_centerTextColor="0xff333333"
            app:awv_isLoop="false"
            app:awv_outerTextColor="0xff999999"
            app:awv_textsize="15"
            />

        <TextView
            style="@style/C_Time_Label"
            android:text="时" />

        <com.weigan.loopview.LoopView
            android:id="@+id/loop5"
            android:layout_width="40dp"
            android:layout_height="@dimen/time_height"
            app:awv_centerTextColor="0xff333333"
            app:awv_isLoop="false"
            app:awv_outerTextColor="0xff999999"
            app:awv_textsize="15" />

        <TextView
            style="@style/C_Time_Label"
            android:text="分" />
    </LinearLayout>

</LinearLayout>