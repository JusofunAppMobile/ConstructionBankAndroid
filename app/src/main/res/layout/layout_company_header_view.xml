<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/img_company_detail_title_bg1"
        android:orientation="vertical"
        android:paddingBottom="17dp"
        android:paddingTop="22dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/text_company_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#E2FDE0"
                android:layout_weight="1"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textColor="#E2FDE0"
                android:textSize="13sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/text_company_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#E2FDE0"
            android:textSize="14sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#88ffffff"
            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/text_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标记为目标客户"
            android:background="@drawable/shape_stroke_white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="right"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape_underline_gray"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_detail_phone_icon" />

            <TextView
                android:id="@+id/phone_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@+id/icon_phone"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/vExport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/phone_content"
                android:background="@drawable/shape_solid_common"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="导出"
                android:textColor="@color/common"
                android:textSize="10sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="联系信息"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/img_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/img_down_jiantou" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_location_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/shape_underline_gray"
                android:paddingLeft="15dp">

                <ImageView
                    android:id="@+id/icon_location"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_location" />

                <TextView
                    android:id="@+id/address_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/icon_location"
                    android:drawablePadding="5dp"
                    android:gravity="left|center"
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/website_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/shape_underline_gray"
                android:paddingLeft="15dp">

                <ImageView
                    android:id="@+id/icon_website"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_internet" />


                <TextView
                    android:id="@+id/website_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/icon_website"
                    android:gravity="left"
                    android:textColor="#666666"
                    android:textSize="13dp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>