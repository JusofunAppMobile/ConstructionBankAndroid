<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="11dp"
    android:paddingTop="2dp">

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_staus_phone" />

    <ImageView
        android:id="@+id/img_visit"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginLeft="-5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_status_visit" />

    <ImageView
        android:id="@+id/img_sisited"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginLeft="-5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_status_sisited" />

    <ImageView
        android:id="@+id/img_cooperation"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginLeft="-5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_status_cooperation" />

    <ImageView
        android:id="@+id/img_formal"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginLeft="-5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_status_formal" />

</LinearLayout>