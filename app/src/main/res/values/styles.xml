<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyTheme.Layout.Root" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">#FFF</item>
    </style>

    <style name="Splash" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_splash_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:configChanges">orientation|keyboardHidden|locale|navigation|screenSize
        </item>
    </style>

    <style name="C_Xucun">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_stroke_blue</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">#1E9EFB</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/to_top</item>
        <item name="android:windowExitAnimation">@anim/to_bottom</item>
    </style>


    <style name="C_tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_stroke_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="C_Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/line_bg</item>
    </style>

    <style name="C_110">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="C_Common_Bt" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">25dip</item>
        <item name="android:background">@drawable/selector_common_bt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="C_111">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#999</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="C_Empty" parent="C_111">
        <item name="android:text">ç©º</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="C_113">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="C_114">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/selector_common_list</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="C_115">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="C_116">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="C_Arrow_Right">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="MCTheme.Widget.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="tool_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="xlistview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:footerDividersEnabled">false</item>
    </style>

    <style name="C_Back_Black">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:src">@mipmap/img_back_black</item>
    </style>

    <style name="C_108">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#999</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="C_119">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FB7C36</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="C_Time_Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="my_style_horizontal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowBackground">@color/white</item>-->
    </style>


</resources>
